<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <!-- Graph view -->
   <extension
         point="org.eclipse.ui.views">
         <category
            id="org.eclipse.zest"
            name="Visualization">
      </category>
	   <view
	            name="Architecture DSL Graph"
	            icon="resources/icons/graph.gif"
	            category="org.eclipse.zest"
	            class="com.btc.arch.zest.ui.ZestGraphView"
	            id="com.btc.arch.zest.ZestView">
		</view>
	</extension>
 <!--
