-->
<extension
      point="org.eclipse.ui.menus">
   <menuContribution
         allPopups="false"
         locationURI="toolbar:com.btc.arch.zest.ZestView">
      <command
            commandId="com.btc.arch.ArchitectureDsl.zest.ui.update-mode"
            icon="resources/icons/update-mode.gif"
            style="toggle"
            tooltip="Automatically visualize changed architecture DSL model content in the workspace">
      </command>

      <command
            commandId="com.btc.arch.ArchitectureDsl.zest.ui.layout"
            icon="resources/icons/layout.gif"
            style="push"
            tooltip="Layout">
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="menu:com.btc.arch.zest.ZestView">
      <command
            commandId="com.btc.arch.ArchitectureDsl.zest.ui.openFile"
            icon="resources/icons/open.gif"
            label="Open File"
            style="push"
            tooltip="Load file with architecture DSL model content...">
      </command>

   </menuContribution>
</extension>
<extension
      point="org.eclipse.ui.handlers">
   <handler
         class="com.btc.arch.zest.ui.ZestGraphViewCommandHandler"
         commandId="com.btc.arch.ArchitectureDsl.zest.ui.update-mode">
   </handler>
   <handler
         class="com.btc.arch.zest.ui.ZestGraphViewCommandHandler"
         commandId="com.btc.arch.ArchitectureDsl.zest.ui.layout">
   </handler>
   <handler
         class="com.btc.arch.zest.ui.ZestGraphViewCommandHandler"
         commandId="com.btc.arch.ArchitectureDsl.zest.ui.openFile">
   </handler>
</extension>
<extension
      point="org.eclipse.ui.commands">
   <command
         id="com.btc.arch.ArchitectureDsl.zest.ui.update-mode"
         name="Update-Mode">
   </command>
   <command
         id="com.btc.arch.ArchitectureDsl.zest.ui.layout"
         name="Layout">
   </command>
   <command
         id="com.btc.arch.ArchitectureDsl.zest.ui.openFile"
         name="Open File">
   </command>
</extension>
 
</plugin>
